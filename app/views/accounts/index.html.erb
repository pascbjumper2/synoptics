<h2>Index</h2>

<% if flash[:notice] %>
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	<span><strong>Notice: </strong><%= flash[:notice] %></span>
</div>

<div class="alert alert-warning">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	<span><strong>Notice: </strong><%= flash[:notice] %></span>
</div>

<div class="alert alert-info">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	<span><strong>Notice: </strong><%= flash[:notice] %></span>
</div>

<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
	<span><strong>Notice: </strong><%= flash[:notice] %></span>
</div>
<% end %>


<%= link_to 'Create new account', new_account_path  %>

<% @accounts.each do |account| %>
	<p>
		<%= account.number %><br />
		<%= link_to account.name, account_path(account) %><br />
		<%= account.description %><br />
		<%= account.acc_type %><br />
		<%= account.acc_class %><br />
		<%= account.balance %><br />
		
		<%= link_to 'Edit', edit_account_path(account) %><br />
		<%= link_to 'Delete', account, method: :delete %>
	</p>
<% end %>


